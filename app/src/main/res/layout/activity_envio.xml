<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Registro de Envío"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#E65100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"/>

                <EditText
                    android:id="@+id/etNombreRemitente"
                    android:hint="Nombre del remitente"
                    android:inputType="textPersonName"
                    android:drawableStart="@android:drawable/ic_menu_edit"
                    android:backgroundTint="#E65100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etDireccionEnvio"
                    android:hint="Dirección del que envía"
                    android:inputType="textPostalAddress"
                    android:drawableStart="@android:drawable/ic_menu_directions"
                    android:backgroundTint="#E65100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etDireccionDestinatario"
                    android:hint="Dirección del destinatario"
                    android:inputType="textPostalAddress"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:backgroundTint="#E65100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <EditText
                    android:id="@+id/etCelularRemitente"
                    android:hint="Celular del remitente"
                    android:inputType="phone"
                    android:drawableStart="@android:drawable/ic_menu_call"
                    android:backgroundTint="#E65100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/btnRegistrarEnvio"
                    android:text="Registrar Envío"
                    android:textAllCaps="false"
                    android:backgroundTint="#E65100"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

