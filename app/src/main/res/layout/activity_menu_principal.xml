<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorOnPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="center_horizontal">

        <!-- ========================================================= -->
        <!--                     HEADER BONITO                         -->
        <!-- ========================================================= -->

        <!-- ðŸŸ¦ Header con nombre y rol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:backgroundTint="?attr/colorPrimary">

            <ImageView
                android:id="@+id/imgFotoPerfil"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="Foto de perfil" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/tvRolUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol: â€”"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnPrimary" />


            </LinearLayout>
            <TextView
                android:id="@+id/btnOpciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‹®"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                android:textSize="28sp"
                android:padding="8dp"
                android:background="?attr/colorPrimary"
                android:gravity="center" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- ========================================================= -->
        <!--                   TITULO PRINCIPAL                        -->
        <!-- ========================================================= -->

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rimessa"
            android:textStyle="bold"
            android:textSize="34sp"
            android:layout_marginBottom="24dp"
            android:textColor="?attr/colorOnBackground" />


        <!-- ========================================================= -->
        <!--                     MENÃš PRINCIPAL BONITO                 -->
        <!-- ========================================================= -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TARJETA DE MENÃš -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEnvio"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_package" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrar EnvÃ­o"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- TARJETA: Asignar Rutas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRutas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_ruta" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rutas: RecolecciÃ³n / Entrega"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- TARJETA: Asignar Encomiendas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAsignar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_asignar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asignar Recolector"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- TARJETA: Recolecciones -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecolecciones"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_recoleccion" />

                    <TextView
                        android:id="@+id/tvRecolecciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recolecciones"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- TARJETA: Seguimiento -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSeguimiento"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_seguimiento" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguimiento"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- TARJETA: EstadÃ­sticas -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEstadisticas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="20dp"
                android:layout_marginVertical="10dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_estadisticas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EstadÃ­sticas"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:textColor="?attr/colorOnPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
