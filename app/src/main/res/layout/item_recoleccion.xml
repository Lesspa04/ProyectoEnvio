<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGuia"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guía: ENV-123456"/>

        <TextView
            android:id="@+id/tvRemitente"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remitente: Juan Perez (3001234567)"/>

        <TextView
            android:id="@+id/tvDestinatario"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destinatario: Maria Gomez (3007654321)"/>

        <TextView
            android:id="@+id/tvDireccion"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección destino: Calle 123 #45-67"/>

        <TextView
            android:id="@+id/tvEstado"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: SOLICITADO"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
