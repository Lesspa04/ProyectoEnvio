<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnLoginRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro / Inicio de Sesión" />

        <Button
            android:id="@+id/btnEnvio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Envío"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnRutas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asignación de Rutas"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnMisRecolecciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Recolecciones"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago del Servicio"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguimiento de Envío"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>

